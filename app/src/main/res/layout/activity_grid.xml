<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baseline_more_vert_24"
    tools:openDrawer="end">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/encabezado"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingStart="50px"
            android:text="@string/cl"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/baseline_more_vert_24"
            android:gravity="end"
            app:backgroundTint="@color/white" />
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:rowCount="4">

        <TextView
            android:id="@+id/num7"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="7" />

        <TextView
            android:id="@+id/num8"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="8" />

        <TextView
            android:id="@+id/num9"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="9" />

        <TextView
            android:id="@+id/num4"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="4" />

        <TextView
            android:id="@+id/num5"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="5" />

        <TextView
            android:id="@+id/num6"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="6" />

        <TextView
            android:id="@+id/multiplicar"
            style="@style/AppTheme.Botones.Rojos"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="ร" />

        <TextView
            android:id="@+id/dividir"
            style="@style/AppTheme.Botones.Rojos"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="รท" />

        <TextView
            android:id="@+id/num1"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="1" />

        <TextView
            android:id="@+id/num2"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="2" />

        <TextView
            android:id="@+id/num3"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="3" />

        <TextView
            android:id="@+id/menos"
            style="@style/AppTheme.Botones.Rojos"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:id="@+id/punto"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:gravity="center_horizontal"
            android:text="." />

        <TextView
            android:id="@+id/num0"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="0" />

        <TextView
            android:id="@+id/igual"
            style="@style/AppTheme.Botones.Azules"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="=" />

        <TextView
            android:id="@+id/mas"
            style="@style/AppTheme.Botones.Rojos"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="+" />
    </GridLayout>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="Volver" />


</LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/header_layout"
        app:itemTextColor="@android:color/system_accent1_1000"
        app:menu="@menu/options"
        tools:targetApi="s">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:background="@android:color/system_accent1_1000"
            android:paddingTop="30dp"
            android:text="Menu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
